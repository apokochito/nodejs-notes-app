<div class="jumbotron mt-3 float-md-center offset-3" style="background-color: transparent; color:white;">
    <h1>New Tutorial</h1>
    <br>
    <form action="/tutorial/add" method="POST">
        <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
        </div>
        <div class="form-group">
            <textarea name="description" rows="7" class="form-control" placeholder="Description"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-secondary btn-block">Save</button>
        </div>
    </form>
</div>