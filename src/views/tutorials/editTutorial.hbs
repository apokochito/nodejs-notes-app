<div class="jumbotron mt-3 float-md-center offset-3" style="background-color: transparent; color:white;">
    <h1>Edit Tutorial</h1>
    <br>
    <form action="/tutorial/edit/{{tutorial._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <input type="text" name="title" class="form-control" value="{{tutorial.title}}" autofocus>
        </div>
        <div class="form-group">
            <textarea name="description" rows="7" class="form-control">{{tutorial.description}}</textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-secondary btn-block" type="submit">Update</button>
        </div>
    </form>
</div>